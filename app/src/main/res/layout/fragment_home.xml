<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UserActivity">

        <ImageView
            android:id="@+id/img_wordhome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_wordhome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request the food before one hour until the meeting time."
            android:textSize="10dp"
            android:textColor="@color/red"
            android:layout_gravity="center"/>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="25dp"-->
            <!--android:textSize="10dp" />-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_list"
            android:layout_width="match_parent"
            android:layout_height="415dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center|bottom"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtEmpty"
            android:textSize="35dp"
            android:text="Oops... Sorry!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center|bottom"
            android:textColor="@color/grey"
            android:id="@+id/txtEmpty2"
            android:textSize="22dp"
            android:text="No food provide currently"/>

    </LinearLayout>
</FrameLayout>